<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".cardview.PrimeiroTurnoNovo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background = "@drawable/gradient"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        card_view:cardCornerRadius="2dp"


        card_view:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.09"
                android:ems="3"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"/>




            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/data"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.17"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/arbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arbitro"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/arbitro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/horario"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="0.21"
                android:gravity="left"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagem1"
                android:layout_width="33dp"
                android:layout_height="30dp" />


            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.40"
                android:ems="4"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/placartime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/x"
                android:layout_width="19dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x"
                android:textColor="#000000"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/placartime2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.92"
                android:ems="4"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagem2"
                android:layout_width="33dp"
                android:layout_height="30dp" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>